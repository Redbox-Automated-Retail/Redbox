<UserControl
    x:Class="Redbox.Rental.UI.Views.ComingSoonViewUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Image
            x:Name="backgroundImage"
            Stretch="Fill"
            Source="pack://Application:,,,/Redbox.Rental.UI;component/Assets/Images/Cart_bg.png" />
        <TextBlock
            x:Name="TextBlockComingSoon"
            Margin="0, 100,0,0"
            HorizontalAlignment="Center"
            Style="{StaticResource font_target_largest}">
            Coming Soon!
        </TextBlock>
        <StackPanel
            x:Name="ComingSoonPanel"
            Margin="0,248,0,200"
            Orientation="Horizontal"
            HorizontalAlignment="Center" />
        <TextBlock
            x:Name="TextBlockRentalsComingSoon"
            Margin="0, 646,0,0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Style="{StaticResource font_target_large}">
            Your rentals are on their way!
        </TextBlock>
    </Grid>
</UserControl>