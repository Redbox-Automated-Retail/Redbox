<localControls:TextToSpeechUserControl
    x:Class="Redbox.Rental.UI.Views.GeneralMessageViewUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Redbox="clr-namespace:Redbox.Controls;assembly=Redbox.Controls"
    xmlns:localControls="clr-namespace:Redbox.Rental.UI.Controls">
    <Grid>
        <Panel.Background>
            <LinearGradientBrush
                StartPoint="0,0"
                EndPoint="1,1">
                <GradientStop
                    Color="#E42045"
                    Offset="0.0" />
                <GradientStop
                    Color="#902A7D"
                    Offset="0.5" />
                <GradientStop
                    Color="#491E54"
                    Offset="1.0" />
            </LinearGradientBrush>
        </Panel.Background>
        <Redbox:GridExt>
            <TextBlock
                x:Name="MessageText"
                Foreground="#FFFFFFFF"
                Style="{StaticResource font_montserrat_bold_40}"
                LineHeight="56"
                TextAlignment="Center"
                Margin="0,104,0,0"
                HorizontalAlignment="Center"
                Text="{Binding Path=MessageText}" />
            <Redbox:SpinControl
                Grid.Row="2"
                Margin="0,276,0,0"
                VerticalAlignment="Top"
                Period="2"
                Radius="96"
                RepeatForever="True"
                IsAnimated="True"
                HorizontalAlignment="Center">
                <Grid>
                    <Ellipse
                        StrokeThickness="9">
                        <Shape.Stroke>
                            <LinearGradientBrush
                                EndPoint="0.445,0.997"
                                StartPoint="0.555,0.003">
                                <GradientStop
                                    Color="White"
                                    Offset="0" />
                                <GradientStop
                                    Color="#FFDEE5F3"
                                    Offset="1" />
                            </LinearGradientBrush>
                        </Shape.Stroke>
                    </Ellipse>
                    <Ellipse
                        StrokeThickness="11"
                        Margin="70">
                        <Shape.Stroke>
                            <LinearGradientBrush
                                EndPoint="0.445,0.997"
                                StartPoint="0.555,0.003">
                                <GradientStop
                                    Color="White"
                                    Offset="0" />
                                <GradientStop
                                    Color="#FFDEE5F3"
                                    Offset="1" />
                            </LinearGradientBrush>
                        </Shape.Stroke>
                    </Ellipse>
                    <Grid>
                        <Ellipse
                            StrokeThickness="11"
                            Margin="34">
                            <Shape.Stroke>
                                <LinearGradientBrush
                                    EndPoint="0.445,0.997"
                                    StartPoint="0.555,0.003">
                                    <GradientStop
                                        Color="White"
                                        Offset="0" />
                                    <GradientStop
                                        Color="#FFDEE5F3"
                                        Offset="1" />
                                </LinearGradientBrush>
                            </Shape.Stroke>
                        </Ellipse>
                        <Ellipse
                            StrokeThickness="11"
                            Margin="49">
                            <Shape.Stroke>
                                <LinearGradientBrush
                                    EndPoint="0.445,0.997"
                                    StartPoint="0.555,0.003">
                                    <GradientStop
                                        Color="White"
                                        Offset="0" />
                                    <GradientStop
                                        Color="#FFDEE5F3"
                                        Offset="1" />
                                </LinearGradientBrush>
                            </Shape.Stroke>
                        </Ellipse>
                        <UIElement.Clip>
                            <RectangleGeometry
                                Rect="0,0,96,96" />
                        </UIElement.Clip>
                    </Grid>
                </Grid>
            </Redbox:SpinControl>
        </Redbox:GridExt>
    </Grid>
</localControls:TextToSpeechUserControl>