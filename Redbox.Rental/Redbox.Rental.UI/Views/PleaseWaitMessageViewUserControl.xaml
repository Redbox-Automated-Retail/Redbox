<controls:TextToSpeechUserControl
    x:Class="Redbox.Rental.UI.Views.PleaseWaitMessageViewUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Redbox.Rental.UI.Controls">
    <Grid
        Background="#B5121B">
        <TextBlock
            x:Name="MessageText"
            Foreground="#FFFFFFFF"
            Margin="60,133"
            Style="{StaticResource font_museo_slab_900_64}"
            Text="{Binding TitleMessage, FallbackValue='Please Wait...'}" />
    </Grid>
</controls:TextToSpeechUserControl>