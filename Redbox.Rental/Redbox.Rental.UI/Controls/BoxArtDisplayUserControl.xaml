<UserControl
    x:Class="Redbox.Rental.UI.Controls.BoxArtDisplayUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel
            x:Name="titles_boxart_container"
            Orientation="Horizontal"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Height="156">
            <Border
                BorderThickness="1"
                BorderBrush="#979797"
                Margin="6,0"
                Visibility="{Binding BoxArt1Visibility, FallbackValue=Collapsed}">
                <Image
                    MaxWidth="109"
                    Source="{Binding BoxArt1}" />
            </Border>
            <Border
                BorderThickness="1"
                BorderBrush="#979797"
                Margin="6,0"
                Visibility="{Binding BoxArt2Visibility, FallbackValue=Collapsed}">
                <Image
                    MaxWidth="109"
                    Source="{Binding BoxArt2}" />
            </Border>
            <Border
                BorderThickness="1"
                BorderBrush="#979797"
                Margin="6,0"
                Visibility="{Binding BoxArt3Visibility, FallbackValue=Collapsed}">
                <Image
                    MaxWidth="109"
                    Source="{Binding BoxArt3}" />
            </Border>
            <Border
                BorderThickness="1"
                BorderBrush="#979797"
                Margin="6,0"
                Visibility="{Binding BoxArt4Visibility, FallbackValue=Collapsed}">
                <Image
                    MaxWidth="109"
                    Source="{Binding BoxArt4}" />
            </Border>
            <Border
                BorderThickness="1"
                BorderBrush="#979797"
                Margin="6,0"
                Visibility="{Binding BoxArt5Visibility, FallbackValue=Collapsed}">
                <Image
                    MaxWidth="109"
                    Source="{Binding BoxArt5}" />
            </Border>
            <Border
                BorderThickness="1"
                BorderBrush="#979797"
                Margin="6,0"
                Visibility="{Binding BoxArt6Visibility, FallbackValue=Collapsed}">
                <Image
                    MaxWidth="109"
                    Source="{Binding BoxArt6}" />
            </Border>
            <Border
                BorderThickness="1"
                BorderBrush="#979797"
                Margin="6,0"
                Visibility="{Binding BoxArt7Visibility, FallbackValue=Collapsed}">
                <Image
                    MaxWidth="109"
                    Source="{Binding BoxArt7}" />
            </Border>
        </StackPanel>
    </Grid>
</UserControl>