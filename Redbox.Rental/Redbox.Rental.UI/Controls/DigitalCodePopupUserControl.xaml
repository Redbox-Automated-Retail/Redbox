<UserControl
    x:Class="Redbox.Rental.UI.Controls.DigitalCodePopupUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="0.08*" />
            <ColumnDefinition
                Width="0.92*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        <Ellipse
            Grid.Column="0"
            Grid.Row="0"
            Width="43"
            Height="43"
            StrokeThickness="4"
            Stroke="#481B54"
            HorizontalAlignment="Left" />
        <TextBlock
            Grid.Column="0"
            Grid.Row="0"
            Style="{StaticResource font_montserrat_bold_28}"
            Foreground="#481B54"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="-5,0,0,0"
            Text="1" />
        <Ellipse
            Grid.Column="0"
            Grid.Row="1"
            Width="43"
            Height="43"
            StrokeThickness="4"
            Stroke="#481B54"
            HorizontalAlignment="Left" />
        <TextBlock
            Grid.Column="0"
            Grid.Row="1"
            Style="{StaticResource font_montserrat_bold_28}"
            Foreground="#481B54"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="-5,0,0,0"
            Text="2" />
        <Ellipse
            Grid.Column="0"
            Grid.Row="2"
            Width="43"
            Height="43"
            StrokeThickness="4"
            Stroke="#481B54"
            HorizontalAlignment="Left" />
        <TextBlock
            Grid.Column="0"
            Grid.Row="2"
            Style="{StaticResource font_montserrat_bold_28}"
            Foreground="#481B54"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="-5,0,0,0"
            Text="3" />
        <TextBlock
            Grid.Column="1"
            Grid.Row="0"
            Foreground="#481B54"
            TextWrapping="Wrap"
            VerticalAlignment="Center"
            Style="{StaticResource font_montserrat_medium_20}"
            Text="{Binding Path=MessageLine1}" />
        <TextBlock
            Grid.Column="1"
            Grid.Row="1"
            Foreground="#481B54"
            TextWrapping="Wrap"
            VerticalAlignment="Center"
            Style="{StaticResource font_montserrat_medium_20}"
            Text="{Binding Path=MessageLine2}" />
        <TextBlock
            Grid.Column="1"
            Grid.Row="2"
            Foreground="#481B54"
            TextWrapping="Wrap"
            VerticalAlignment="Center"
            Style="{StaticResource font_montserrat_medium_20}"
            Text="{Binding Path=MessageLine3}" />
    </Grid>
</UserControl>