<UserControl
    x:Class="Redbox.Rental.UI.Controls.ChevronUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Polygon
            Name="RightArrow"
            Stroke="#FFFFFFFF"
            StrokeThickness="1"
            Stretch="Uniform"
            Fill="{Binding Path=ChevronColor, FallbackValue=White}">
            <Polygon.Points>
                <Point
                    X="10"
                    Y="10" />
                <Point
                    X="33"
                    Y="33" />
                <Point
                    X="10"
                    Y="56" />
                <Point
                    X="15"
                    Y="61" />
                <Point
                    X="43"
                    Y="33" />
                <Point
                    X="15"
                    Y="5" />
            </Polygon.Points>
        </Polygon>
        <Polygon
            Name="LeftArrow"
            Stroke="#FFFFFFFF"
            StrokeThickness="1"
            Stretch="Uniform"
            Fill="{Binding Path=ChevronColor, FallbackValue=White}">
            <Polygon.Points>
                <Point
                    X="43"
                    Y="10" />
                <Point
                    X="20"
                    Y="33" />
                <Point
                    X="43"
                    Y="56" />
                <Point
                    X="38"
                    Y="61" />
                <Point
                    X="10"
                    Y="33" />
                <Point
                    X="38"
                    Y="5" />
            </Polygon.Points>
        </Polygon>
    </Grid>
</UserControl>